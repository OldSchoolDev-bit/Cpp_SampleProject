{
	"version": "2.0.0",
	"tasks": [
	  {
		"type": "cppbuild",
		"label": "C/C++: g++.exe build active file",
		"command": "C:\\mingw64\\bin\\g++.exe",
		"args": [
		  "-g",
		  "-std=c++20",
		  "${workspaceFolder}/src/*.cpp",
		  "-o",
		  "${workspaceFolder}/build/rooster.exe"
		],
		"options": {
		  "cwd": "${workspaceFolder}/build"
		},
		"problemMatcher": [
		  "$gcc"
		],
		"group": "build",
		"detail": "compiler: C:\\mingw64\\bin\\g++.exe"
	  },
	  {
		"type": "cppbuild",
		"label": "C/C++: clang++.exe build active file",
		"command": "C:\\mingw64\\bin\\clang++.exe",
		"args": [
		  "-g",
		  "-std=c++20",
		  "${workspaceFolder}/src/*.cpp",
		  "-o",
		  "${workspaceFolder}/build/rooster.exe"
		],
		"options": {
		  "cwd": "${workspaceFolder}/build"
		},
		"problemMatcher": [
		  "$gcc"
		],
		"group": "build",
		"detail": "compiler: C:\\mingw64\\bin\\clang++.exe"
	  },
	  {
		"type": "cppbuild",
		"label": "Build with MSVC",
		"command": "cl.exe",
		"args": [
		  "/Zi",
		  "/std:c++latest",
		  "/EHsc",
		  "/Fe:${workspaceFolder}/build/rooster.exe",
		  "${workspaceFolder}/src/*.cpp"
		],
		"options": {
		  "cwd": "${workspaceFolder}/build"
		},
		"problemMatcher": [
		  "$msCompile"
		],
		"group": "build",
		"detail": "compiler: cl.exe"
	  }
	]
  }
  